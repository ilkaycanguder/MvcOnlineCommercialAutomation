@using MvcOnlineTicariOtomasyon.Models
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table id="tbl1" class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.SatisID</th>
            <td>@item.Urun.UrunAd</td>
            <td>@item.Cariler.CariAd @item.Cariler.CariSoyad</td>
            <td>@item.Personel.PersonelAd @item.Personel.PersonelSoyad</td>
            <td>@item.Adet</td>
            <td>@item.Fiyat</td>
            <td>@item.ToplamTutar</td>
            <td>@item.Tarih</td>
            <td><a href="/Satis/GetSatis/@item.SatisID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Satis/SatisDetay/@item.SatisID" class="btn btn-dark">Detaylar</a></td>
        </tr>
    }
</table>

<a href="/Satis/YeniSatis/" class="btn btn-info">Yeni Satış Yap</a>

