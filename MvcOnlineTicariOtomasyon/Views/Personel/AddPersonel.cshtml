@model MvcOnlineTicariOtomasyon.Models.Personel
@{
    ViewBag.Title = "AddPersonel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-4">Yeni Personel Ekleme</h2>

@using (Html.BeginForm("AddPersonel", "Personel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group mt-3">
        <label for="PersonelAd" class="form-label">@Html.LabelFor(x => x.PersonelAd)</label>
        @Html.TextBoxFor(x => x.PersonelAd, new { @class = "form-control", placeholder = "Personel Adı" })
    </div>

    <div class="form-group mt-3">
        <label for="PersonelSoyad" class="form-label">@Html.LabelFor(x => x.PersonelSoyad)</label>
        @Html.TextBoxFor(x => x.PersonelSoyad, new { @class = "form-control", placeholder = "Personel Soyadı" })
    </div>

    <div class="form-group mt-3">
        <label for="PersonelGorsel" class="form-label">@Html.LabelFor(x => x.PersonelGorsel)</label>
        <input type="file" name="PersonelGorsel" class="form-control w-100" id="PersonelGorsel" />
    </div>

    <div class="form-group mt-3">
        <label for="Departman" class="form-label">@Html.LabelFor(x => x.Departman)</label>
        @Html.DropDownListFor(x => x.DepartmanID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Personel Ekle</button>
    </div>
}