@model MvcOnlineTicariOtomasyon.Models.Class4
@{
    ViewBag.Title = "Dinamik";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.7.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<br />
<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <h2 class="panel-title pull-left" style="margin-left:10px;">
                <strong>Fatura & Kalem İşlemleri</strong>
            </h2>
            <button style="margin-right:10px" class="btn btn-primary pull-right" onclick="addNewOrder()">Fatura Girişi</button>
        </div>
    </div>
    @*Fatura Listesi*@
    @foreach (var item in Model.deger1)
    {
        <div class="panel-body">
            <table class="table table-striped table-responsive">
                <tbody>
                    <tr>
                        <td>Seri-SıraNo : @item.FaturaSeriNo-@item.FaturaSiraNo</td>
                        <td>Cari : @item.TeslimEden</td>
                        <td>Tarih : @item.Tarih</td>
                        <td>Vergi Dairesi : @item.VergiDairesi</td>
                    </tr>

                    <tr>
                        <td colspan="4">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>Açıklama</th>
                                        <th>Miktar</th>
                                        <th>Fiyat</th>
                                        <th>Tutar</th>
                                    </tr>
                                    @{
                                        var totalBill = 0;
                                    }
                                    @foreach (var order in item.FaturaKalems)
                                    {
                                        <tr>
                                            <td>@order.Aciklama</td>
                                            <td>@order.Miktar</td>
                                            <td>@order.BirimFiyat</td>
                                            <td>@order.Tutar</td>
                                        </tr>
                                        totalBill = totalBill + @Convert.ToInt32(order.Tutar);
                                    }
                                </tbody>
                            </table>
                            <span class="pull-right" style="margin-right:100px;"><strong>Fatura Toplam Tutar :  </strong> @totalBill</span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>

@*Adım 2*@

<div class="modal fade" id="newOrderModal">
    <div class="modal-dialog modal-lg" style="width: 900px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="float: left;">Yeni Fatura Girişi</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="NewOrderForm">
                <div class="modal-body">
                    <!-- Fatura Detayları -->
                    <h5 style="color:#ff6347">Fatura Detayları</h5>
                    <hr />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="FaturaSeriNo" class="form-label">Seri No</label>
                            <input type="text" id="FaturaSeriNo" name="FaturaSeriNo" placeholder="Seri Numarası" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="FaturaSiraNo" class="form-label">Sıra No</label>
                            <input type="text" id="FaturaSiraNo" name="FaturaSiraNo" placeholder="Sıra Numarası" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Tarih" class="form-label">Tarih</label>
                            <input type="date" id="Tarih" name="Tarih" placeholder="Tarihi Girin" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="VergiDairesi" class="form-label">Vergi Dairesi</label>
                            <input type="text" id="VergiDairesi" name="VergiDairesi" placeholder="Vergi Dairesi" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Saat" class="form-label">Saat</label>
                            <input type="time" id="Saat" name="Saat" placeholder="Saat Girin" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="TeslimEden" class="form-label">Teslim Eden</label>
                            <input type="text" id="TeslimEden" name="TeslimEden" placeholder="Teslim Eden Cari / Personel" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="TeslimAlan" class="form-label">Teslim Alan</label>
                            <input type="text" id="TeslimAlan" name="TeslimAlan" placeholder="Teslim Alan Cari / Personel" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="Toplam" class="form-label">Toplam Tutar</label>
                            <input type="number" step="0.01" id="Toplam" name="Toplam" placeholder="Toplam Tutar" class="form-control" />
                        </div>
                    </div>

                    <!-- Fatura Kalemleri -->
                    <h5 style="margin-top:10px;color:#ff6347">Fatura Kalemleri</h5>
                    <hr />
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="Aciklama" class="form-label">Açıklama</label>
                            <input type="text" id="Aciklama" name="Aciklama" placeholder="Ürün / Birim Açıklaması" class="form-control" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="BirimFiyat" class="form-label">Fiyat</label>
                            <input type="number" step="0.01" id="BirimFiyat" name="BirimFiyat" placeholder="Birim Başına Fiyat Miktarı" class="form-control" />
                        </div>
                        <div class="col-md-3 mb-3">
                            <label for="Miktar" class="form-label">Miktar</label>
                            <input type="number" id="Miktar" name="Miktar" placeholder="Miktar Giriniz" class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 text-end">
                            <a id="addToList" class="btn btn-primary">Listeye Ekle</a>
                        </div>
                    </div>

                    <!-- Tablo -->
                    <table id="detailsTable" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Açıklama</th>
                                <th>Miktar</th>
                                <th>Fiyat</th>
                                <th>Tutar</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="reset" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button id="saveOrder" type="submit" class="btn btn-danger">Faturayı Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

@*Adım 3*@

@section scripts{
    <script>
        function addNewOrder() {
            var modal = new bootstrap.Modal(document.getElementById('newOrderModal'));
            modal.show();
        }
        $("#addToList").click(function (e) {
            e.preventDefault();
            if ($.trim($("#Aciklama").val()) == "" || $.trim($("#BirimFiyat").val()) == "" || $.trim($("#Miktar").val()) == "") return;
            var Aciklama = $("#Aciklama").val(),
                BirimFiyat = $("#BirimFiyat").val(),
                Miktar = $("#Miktar").val(),
                detailsTableBody = $("#detailsTable tbody");
            var degerler = '<tr><td>' + Aciklama + '</td><td>' + BirimFiyat + '</td><td>' + Miktar + '</td><td>' + (parseFloat(BirimFiyat) * parseInt(Miktar)) + '</td><td><a data-itemId="0" href="#" class="deleteItem">Remove</a></td></tr>';
            detailsTableBody.append(degerler);
            clearItem();
        });
        function clearItem() {
            $("#Aciklama").val('');
            $("#BirimFiyat").val('');
            $("#Miktar").val('');
        }
        $(document).on('click', 'a.deleteItem', function (e) {
            e.preventDefault();
            var $self = $(this);
            if ($(this).attr('data-itemId') == "0") {
                $(this).parents('tr').css("background-color", "#ff6347").fadeOut(800, function () {
                    $(this).remove();
                });
            }
        });
        function saveOrder(data) {
            return $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                type: 'POST',
                url: "/Fatura/FaturaKaydet",
                data: data,
                success: function (result) {
                    alert(result);
                    location.reload();
                },
                error: function () {
                    alert("Error!")
                }
            });
        }
        $("#saveOrder").click(function (e) {
            e.preventDefault();
            var orderArr = [];
            orderArr.length = 0;
            $.each($("#detailsTable tbody tr"), function () {
                orderArr.push({
                    Aciklama: $(this).find('td:eq(0)').html(),
                    Miktar: $(this).find('td:eq(1)').html(),
                    BirimFiyat: $(this).find('td:eq(2)').html(),
                    Tutar: $(this).find('td:eq(3)').html()
                });
            });

            var data = JSON.stringify({
                FaturaSeriNo: $("#FaturaSeriNo").val(),
                FaturaSiraNo: $("#FaturaSiraNo").val(),
                Tarih: $("#Tarih").val(),
                Saat: $("#Saat").val(),
                VergiDairesi: $("#VergiDairesi").val(),
                TeslimEden: $("#TeslimEden").val(),
                TeslimAlan: $("#TeslimAlan").val(),
                Toplam: $("#Toplam").val(),
                kalemler: orderArr
            });
            $.when(saveOrder(data)).then(function (response) {
                console.log(response);
            }).fail(function (err) {
                console.log(err);
            });
        });
    </script>
}
