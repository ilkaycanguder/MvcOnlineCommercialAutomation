@model MvcOnlineTicariOtomasyon.Models.Departman
@{
    ViewBag.Title = "GetDepartman";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Güncelleme</h2>

@using (Html.BeginForm("UpdateDepartman", "Departman", FormMethod.Post))
{
    <div class="form-group mb-2">
        @Html.LabelFor(x => x.DepartmanAd)
        @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
        @Html.HiddenFor(x => x.DepartmanID)
    </div>
    <button class="btn btn-dark">Güncelle</button>
}
