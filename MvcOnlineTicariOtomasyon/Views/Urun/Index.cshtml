@using MvcOnlineTicariOtomasyon.Models
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.UrunID</th>
            <td>@item.UrunAd</td>
            <td>@item.Marka</td>
            <td>@item.Stok</td>
            <td>@item.AlisFiyat</td>
            <td>@item.SatisFiyat</td>
            <td>@item.Kategori.KategoriAd</td>
            <td>@item.UrunGorsel</td>
            <td><a href="/Urun/DeleteUrun/@item.UrunID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/GetUrun/@item.UrunID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>

<a href="/Urun/NewUrun/" class="btn btn-info">Yeni Ürün Ekle</a>